{
  "include": ["./**/*"],
  "exclude": ["dist", "node_modules", "*.js"],
  "compilerOptions": {
    "checkJs": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "types": ["bundlebd", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
